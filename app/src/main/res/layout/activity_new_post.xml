<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPostActivity">

    <Button
        android:id="@+id/btn_post_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Post Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_post_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Post Image"
        app:layout_constraintEnd_toEndOf="@+id/btn_post_text"
        app:layout_constraintStart_toStartOf="@+id/btn_post_text"
        app:layout_constraintTop_toBottomOf="@+id/btn_post_text" />

    <Button
        android:id="@+id/btn_post_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Post Video"
        app:layout_constraintEnd_toEndOf="@+id/btn_post_image"
        app:layout_constraintStart_toStartOf="@+id/btn_post_image"
        app:layout_constraintTop_toBottomOf="@+id/btn_post_image" />

</androidx.constraintlayout.widget.ConstraintLayout>